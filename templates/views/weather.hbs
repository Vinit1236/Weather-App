<!DOCTYPE html>
<html lang="en">
<head>
    {{>headLinks}}
</head>
<body>
    {{>navbar}}
    <!-- main header -->
    <div class="container-fluid main_header">
      <div class="row">
          <div class="col-md-10 col-12 mx-auto">
               <div class="main-content">
                  <form class="tmp_form">
                    <input type="text" id="cityName" placeholder="Enter Your City Name..." autocomplete="off">
                    <input type="submit" value="Search" id="subBtn">
                  </form>
               </div>
               <div class="tempInfo">
                     <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">13 Oct</p>
                     </div>
                     <div class="main_layer">
                        <p id="city_name">Get Output Here...</p>
                        <div class="middle_layer data_hide">
                            <p><span id="temp">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa-solid fa-cloud"></i></p>
                        </div>
                     </div>
               </div>
          </div>
      </div>
    </div>
    <!-- Footer div -->
    {{>footer}}
    <script src="JS/main.js"></script>
</body>
</html>